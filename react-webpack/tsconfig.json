{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "module": "ESNext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@layout": ["src/layout"],
      "@api": ["src/api"],
      "@router": ["src/router"],
      "@store": ["src/store"],
      "@public": ["public"],
      "@pages": ["src/pages"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"]
}